%  problema(3,3).
  problema(2,4).
 
end_of_list.

formula_list(passive).
% Mostramos la respuesta como una lista de listas
all u d w f ((tablero(0,w,u,d,f) ) -> $ANS(w)).
end_of_list.


list(demodulators).
 append([],w) = w.
 append([x|w1],w2) = [x|append(w1,w2)].
 interseccion([],w) = [].
 interseccion([x|w1],w2) = $IF(pertenece(x,w2),[x|interseccion(w1,w2)],interseccion(w1,w2)).
 pertenece(x,[]) = $F.
 pertenece(x,[y|w]) = $IF($ID(x,y), $T, pertenece(x,w)).

end_of_list.
