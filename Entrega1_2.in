formula_list(sos).
 % CREACION DE FICHAS

 all x or y1 y2 y3 y4 y5 y6 y7 y8 
    (ficha(x,or,y1,y2,y3,y4,y5,y6,y7,y8) -> 
    (ficha(x,or,y3,y4,y5,y6,y7,y8,y1,y2) & 
     ficha(x,or,y5,y6,y7,y8,y1,y2,y3,y4) &
     ficha(x,or,y7,y8,y1,y2,y3,y4,y5,y6)
    )).

% GESTIÓN DE FILAS
% Si una ficha puede unirse a una fila, creamos la fila con la unión
 all x or1 y1 y2 y3 y4 y5 y6 y7 y8 z or2 z1 z2 z3 z4 z5 z6 w l u d f
    (ficha(x,or1,y1,y2,y3,y4,y5,y6,y7,y8) & fila(l,[ficha(z,or2,z1,z2,z3,z4,z5,z6,y4,y3)|w],u,d,f) & 1<=l & -(pertenece(x,f))
    -> fila(l-1,append([ficha(x,or1,y1,y2,y3,y4,y5,y6,y7,y8),ficha(z,or2,z1,z2,z3,z4,z5,z6,y4,y3)],w),[y1,y2|u],[y6,y5|d],[x|f])).
% Toda ficha puede comenzar una fila
 all x or1 x1 x2 x3 x4 x5 x6 x7 x8 l (ficha(x,or1,x1,x2,x3,x4,x5,x6,x7,x8) & fila(l,[],[],[],[]) ->
   fila(l-1,[ficha(x,or1,x1,x2,x3,x4,x5,x6,x7,x8)],[x1,x2],[x6,x5],[x])).
 
 
% GESTIÓN DE TABLEROS
% Coloco la nueva fila abajo
 all l1 w1 w2 c1 u1 d1 u2 d2 f1 f2
 (fila(0,w1,u1,d1,f1) & tablero(c1,w2,u2,u1,f2) & 1 <= c1 & (interseccion(f1,f2) == [] )
   -> tablero(c1-1,append(w2,[w1]),u2,d1,append(f1,f2))).
 % Coloco la nueva fila arriba
 all l1 w1 w2 c1 u1 d1 u2 d2 f1 f2
 (fila(0,w1,u1,d1,f1) & tablero(c1,w2,d1,d2,f2) & 1 <= c1  & (interseccion(f1,f2) == [] )
   -> tablero(c1-1,[w1|w2],u1,d2,append(f1,f2))).
 % Toda fila puede comenzar un tablero
 all w1 c1 u1 d1 f1
 (fila(0,w1,u1,d1,f1) & tablero(c1,[],[],[],[]) & 1 <= c1 -> tablero(c1-1,[w1],u1,d1,f1)).
 % Unir dos tableros
 all  w1 w2 c1 c2 d1 d2 u1 u2 f1 f2
  (tablero(c1,w1,u1,d1,f1) & tablero(c2,w2,u2,d2,f2) & 0 <= c1-c2  & (u1 = d2)  & interseccion(f1,f2) == [] -> 
   tablero(c1-c2,[w2|w1],u2,d1,append(f1,f2))).

 % Fórmula utilizada para resolver el problema
 all i j (problema(i,j) -> (fila(j,[],[],[],[]) & tablero(i,[],[],[],[]))).
